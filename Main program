def game_setting(): #GUI game setting
    global screen
    global page
    global pen
    global Difficulty
    page=2
    pen.clear() #Reset board
    style="Arial", 20, "bold"
    pen.goto(-75,-12.5)
    pen.pendown()
    pen.write("Difficulty:", align="center", font=(style))
    pen.penup()
    time.sleep(0.1)
    pen.goto(0,25) #TL of left arrow button
    pen.pendown() #Start drawing left arrow button
    pen.goto(25,25) #TR of left arrow button
    pen.goto(25,-25) #BR of left arrow button
    pen.goto(0,-25) #BL of left arrow button
    pen.goto(0,25) #TL of left arrow button
    pen.penup()
    pen.goto(5,0) #Arrow left point
    pen.pendown()
    pen.begin_fill()
    pen.fillcolor("black")
    pen.goto(20,20) #Arrow top right point
    pen.goto(20,-20) #Arrow bottom right point
    pen.goto(5,0) #Arrow left point
    pen.end_fill()
    pen.penup() #Finish drawing left arrow button
    time.sleep(0.1)
    pen.goto(30,25) #TL of current difficulty display
    pen.pendown() #Start drawing current difficulty display
    pen.goto(225,25) #TR of current difficulty display
    pen.goto(225,-25) #BR of current difficulty display
    pen.goto(30,-25) #BL of current difficulty display
    pen.goto(30,25) #TL of current difficulty display
    pen.penup()
    pen.goto(127.5,-17.5)
    pen.pendown() #Print current difficulty
    style="Arial", 20, "bold"
    if Difficulty == 1:
        pen.write("1(21*21 Board)", align="center", font=(style))
    elif Difficulty == 2:
        pen.write("2(31*31 Board)", align="center", font=(style))
    elif Difficulty == 3:
        pen.write("3(41*41 Board)", align="center", font=(style))
    elif Difficulty == 4:
        pen.write("4(51*51 Board)", align="center", font=(style))
    elif Difficulty == 5:
        pen.write("5(Hardcore Mode)", align="center", font=(style))
    pen.penup() #Finish drawing current difficulty display
    time.sleep(0.1)
    pen.goto(230,25) #TL of right arrow button
    pen.pendown() #Start drawing right arrow button
    pen.goto(255,25) #TR of right arrow button
    pen.goto(255,-25) #BR of right arrow button
    pen.goto(230,-25) #BL of right arrow button
    pen.goto(230,25) #TL of right arrow button
    pen.penup()
    pen.goto(235,20) #Arrow top left point
    pen.pendown()
    pen.begin_fill()
    pen.fillcolor("black")
    pen.goto(250,0) #Arrow right point
    pen.goto(235,-20) #Arrow bottom left point
    pen.goto(235,20) #Arrow top left point
    pen.end_fill()
    pen.penup() #Finish drawing right arrow button
    time.sleep(0.1)
    pen.goto(-250,-250) #TL of return button
    pen.pendown() #Start drawing return button
    pen.goto(-125,-250) #TR of return button
    pen.goto(-125,-300) #BR of return button
    pen.goto(-250,-300) #BL of return button
    pen.goto(-250,-250) #TL of return button
    pen.penup()
    pen.goto(-187.5,-295)
    pen.pendown() #Write text
    pen.write("Return", align="center", font=("Arial", 25, "bold"))
    pen.penup() #Finish drawing return button
    screen.listen()
    screen.onclick(button_click)

